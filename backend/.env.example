# Database
DATABASE_URL=postgresql+asyncpg://ltcgroup:ltcgroup_secret@localhost:5432/ltcgroup

# Redis
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development

# AccountPE API
ACCOUNTPE_API_URL=https://api.accountpe.com/v2
ACCOUNTPE_API_KEY=your_accountpe_api_key_here
ACCOUNTPE_JWT_SECRET=your_accountpe_jwt_secret_here

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption (for sensitive data like card numbers)
ENCRYPTION_KEY=your-encryption-key-change-in-production-min-32-chars

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
