# Database
DATABASE_URL=postgresql+asyncpg://ltcgroup:ltcgroup_secret@localhost:5432/ltcgroup

# Redis
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development

# Swychr / AccountPE Virtual Card API
ACCOUNTPE_API_URL=https://api.accountpe.com/api/card/sandbox
