# =============================================
# LTC Group Backend - Production Environment
# =============================================
# Copy this file to .env.production and fill in production values
# NEVER commit .env.production to git

# Environment
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql+asyncpg://user:password@db-host:5432/ltcgroup

# Redis
REDIS_URL=redis://redis-host:6379/0

# JWT Settings - CHANGE THESE TO RANDOM SECURE VALUES
JWT_SECRET_KEY=CHANGE-THIS-TO-RANDOM-64-CHARS-USE-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption - CHANGE THIS TO RANDOM SECURE VALUE (32 chars)
ENCRYPTION_KEY=CHANGE-THIS-TO-RANDOM-32-CHARS-USE-openssl-rand-hex-16

# CORS - Update with your production domains
CORS_ORIGINS=["https://ltcgroup.site","https://www.ltcgroup.site"]

# AccountPE API
ACCOUNTPE_API_URL=https://api.accountpe.com/v2
ACCOUNTPE_API_KEY=your_production_accountpe_api_key
ACCOUNTPE_JWT_SECRET=your_production_jwt_secret

# SMTP Email Configuration
SMTP_HOST=mail.ltcgroup.site
SMTP_PORT=587
SMTP_USER=noreply@ltcgroup.site
SMTP_PASSWORD=your_production_smtp_password
SMTP_FROM_EMAIL=noreply@ltcgroup.site

# File Upload
UPLOAD_DIR=./uploads

# S3P (Smobilpay) Payment - Production credentials
S3P_API_URL=https://s3pv2cm.smobilpay.com/v2
S3P_API_KEY=your_production_s3p_api_key
S3P_API_SECRET=your_production_s3p_api_secret
S3P_MERCHANT_ID=your_production_merchant_id

# E-nkap Payment - Production credentials
ENKAP_API_URL=https://api-v2.enkap.cm
ENKAP_CONSUMER_KEY=your_production_enkap_consumer_key
ENKAP_CONSUMER_SECRET=your_production_enkap_consumer_secret
ENKAP_MERCHANT_CODE=your_production_merchant_code

# S3 Configuration (optional, for production file storage)
AWS_S3_BUCKET=ltcgroup-production-uploads
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
