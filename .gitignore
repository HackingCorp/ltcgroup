backend/.venv/
backend/venv/
backend/.env
backend/.mypy_cache/
backend/.pytest_cache/
backend/htmlcov/
backend/.coverage
backend/uploads/*
!backend/uploads/.gitkeep

# --- Mobile (Flutter) ---
mobile/.dart_tool/
mobile/.packages
mobile/build/
mobile/.flutter-plugins
mobile/.flutter-plugins-dependencies
mobile/android/.gradle/
mobile/ios/Pods/
mobile/ios/.symlinks/
